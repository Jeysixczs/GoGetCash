<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Add this permission if your app needs to connect to the internet (for Firebase) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />




    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GoGetCash"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SignUpActivity"  android:screenOrientation="portrait" android:exported="false" />
        <activity android:name=".DashboardActivity"  android:screenOrientation="portrait" android:exported="false" />
        <activity android:name=".AddLoanActivity"  android:screenOrientation="portrait" android:exported="false" />
        <activity android:name=".ProfileActivity"  android:screenOrientation="portrait" android:exported="false" />
        <activity android:name=".UnpaidActivity"  android:screenOrientation="portrait" android:exported="false" />
        <activity android:name=".LoanDetailsActivity"  android:screenOrientation="portrait" android:exported="false" />
        <activity android:name=".PaidActivity"  android:screenOrientation="portrait" android:exported="false" />
        <activity android:name=".HistoryActivity"  android:screenOrientation="portrait" android:exported="false"/>
        <activity android:name=".CashFlowActivity"  android:screenOrientation="portrait" android:exported="false"/>
        <activity android:name=".CashInActivity"  android:screenOrientation="portrait" android:exported="false"/>
        <activity android:name=".CashOutActivity"  android:screenOrientation="portrait" android:exported="false"/>
        <activity android:name=".ReportsActivity"  android:screenOrientation="portrait" android:exported="false"/>




    </application>

</manifest>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="3dp"
    android:background="@drawable/bg_transaction_card"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="12dp">

    <!-- Icon with colored background -->
    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/round_bg"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_person"
            app:tint="#FFFFFF" />

    </LinearLayout>

    <!-- Main Content -->
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <!-- Loaner Name (Aligns to the left) -->
        <TextView
            android:id="@+id/tvLoanerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/tvLoanAmount"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Loaner Name"
            android:textColor="#1C1C1E"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Loan Amount (Aligns to the right) -->
        <TextView
            android:id="@+id/tvLoanAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="6dp"
            android:text="-₱500.00"
            android:textColor="#FF3B30"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Transaction Date (Below the Name, aligns left) -->
        <TextView
            android:id="@+id/tvTransactionDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLoanerName"
            android:layout_marginTop="6dp"
            android:text="May 21, 2024"
            android:textColor="#8E8E93"
            android:textSize="12sp" />

        <!-- Fee (Below the Amount, aligns right) -->
        <TextView
            android:id="@+id/tvFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLoanAmount"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:text="Fee: ₱50.00"
            android:textColor="#8E8E93"
            android:textSize="11sp" />

    </RelativeLayout>

</LinearLayout>
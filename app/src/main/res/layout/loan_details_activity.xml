<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LoanDetailsActivity">

    <!-- Scrollable Content Area -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="16dp"
            android:paddingEnd="20dp"
            android:paddingBottom="24dp">

            <!-- Header with Back Button and Title -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back"
                    android:padding="6dp"
                    android:src="@drawable/ic_chevron_left"
                    app:tint="#3A3A4C" />

                <TextView
                    android:id="@+id/tvHeaderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Loan Details"
                    android:textColor="#3A3A4C"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <!-- Name Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName|textCapWords"
                    android:textSize="14sp"
                    tools:text="Jeysi" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Phone Number Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPhoneNumber"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Phone Number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:textSize="14sp"
                    tools:text="09123456789" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Amount Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilAmount"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Amount"
                app:prefixText="₱">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    tools:text="1,000.00" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Fee Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilFee"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Fee"
                app:prefixText="₱">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    tools:text="100.00" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Start Date Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilStartDate"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Start Date"
                app:endIconDrawable="@drawable/ic_calendar"
                app:endIconMode="custom">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="date"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Due Date Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDueDate"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Due Date"
                app:endIconDrawable="@drawable/ic_calendar"
                app:endIconMode="custom">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDueDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="date"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Status -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Loan Status"
                android:textColor="#3A3A4C"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLoanStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Unpaid"
                android:textColor="#FF3B30"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- ACTION BUTTONS CONTAINER -->
            <GridLayout
                android:id="@+id/llActionButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="horizontal"
                android:rowCount="3">

                <!-- Row 1: Mark as Paid Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMarkAsPaid"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="12dp"
                    android:text="Mark as Paid"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:backgroundTint="#3A3A4C"
                    app:cornerRadius="100dp" />

                <!-- Row 1: Update Details Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUpdateLoan"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="12dp"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:textColor="#3A3A4C"
                    android:textSize="14sp"
                    app:cornerRadius="100dp"
                    app:strokeColor="#3A3A4C" />

                <!-- Row 2: Add Loan Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddMoreLoan"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="12dp"
                    android:text="Add Loan"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:backgroundTint="#28a745"
                    app:cornerRadius="100dp" />

                <!-- Row 2: Reduce Loan Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReduceLoan"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="12dp"
                    android:text="Reduce Loan"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:backgroundTint="#dc3545"
                    app:cornerRadius="100dp" />


                <!-- Row 3: Delete Loan Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDeleteLoan"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:text="Delete"
                    android:textAllCaps="false"
                    android:textColor="#FF3B30"
                    android:textSize="14sp"
                    app:cornerRadius="100dp"
                    app:strokeColor="#FF3B30"
                    app:strokeWidth="1dp" />

            </GridLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

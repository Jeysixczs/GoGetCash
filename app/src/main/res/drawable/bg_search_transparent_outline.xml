<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- This makes the background of the shape transparent -->
    <solid android:color="@android:color/transparent" />

    <!-- This defines the stroke (the outline) -->
    <stroke
        android:width="1dp"
        android:color="#E5E5E5" /> <!-- A light gray color for the border -->

    <!-- This defines the corner radius -->
    <corners android:radius="24dp" />

</shape>
